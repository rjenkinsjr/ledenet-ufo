{
  "private": true,
  "workspaces": [
    "lufo-api",
    "lufo-cli"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "documentation": "^6.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.67.1",
    "flow-copy-source": "^1.3.0",
    "jasmine": "^3.1.0"
  },
  "scripts": {
    "api-lint": "scripts/lint.sh api",
    "api-build": "scripts/build.sh api",
    "api-test": "scripts/test.sh api",
    "api-pack": "yarn run api-build && cd lufo-api ; yarn pack",
    "api-doc": "yarn run api-lint && cd lufo-api ; rm -rf docs ; documentation build src/** -f html -o docs",
    "cli-lint": "scripts/lint.sh cli",
    "cli-build": "scripts/build.sh cli",
    "cli-test": "scripts/test.sh cli",
    "cli-pack": "yarn run cli-build && cd lufo-cli ; yarn pack",
    "cli-run": "yarn run cli-build && cd lufo-cli ; ./lufo.js"
  }
}
